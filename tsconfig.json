{
  "extends": ["@tsconfig/strictest", "@tsconfig/node-lts"],
  "compilerOptions": {
    "incremental": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "ts-node": {
    "esm": true
  }
}
